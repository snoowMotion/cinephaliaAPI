{% extends 'base.html.twig' %}

{% block title %}Film - {{ film.titre }}{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row">
            <div class="col-md-4">
                <img src="{{ asset('upload/affiche/' ~ film.afficheUrl) }}" alt="{{ film.titre }}" class="img-fluid rounded">
            </div>
            <div class="col-md-8">
                <h1>{{ film.titre }}</h1>
                <p><strong>Synopsis:</strong> {{ film.synopsis }}</p>
                <p><strong>Age Minimum:</strong> {{ film.ageMini }} ans</p>
                <p><strong>Label:</strong>
                    {% if film.label %}
                        <i class="fas fa-check text-success"></i>
                    {% else %}
                        <i class="fas fa-times text-danger"></i>
                    {% endif %}
                </p>
                <div class="mt-4">
                    <a href="{{ path('app_film_index') }}" class="btn btn-secondary">Retour à la liste</a>
                    <a href="{{ path('app_film_edit', {'id': film.id}) }}" class="btn btn-warning">Éditer</a>
                    {{ include('film/_delete_form.html.twig') }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}