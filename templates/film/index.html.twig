{% extends 'base.html.twig' %}

{% block title %}Gestion des films{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="mb-4">Gestion des films</h1>

        <table class="table table-striped table-hover">
            <thead class="thead-dark">
                <tr>
                    <th>Titre</th>
                    <th>Synopsis</th>
                    <th>Poster</th>
                    <th>Age minimum</th>
                    <th>Label</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for film in films %}
                <tr>
                    <td>{{ film.id }}</td>
                    <td>{{ film.titre }}</td>
                    <td>{{ film.synopsis }}</td>
                    <td><img src="{{ asset('upload/affiche/' ~ film.afficheUrl) }}" alt="{{ film.titre }}" class="img-thumbnail" style="max-width: 100px;"></td>
                    <td>{{ film.ageMini }}</td>
                    <td>
                        {% if film.label %}
                            <i class="fas fa-check text-success"></i>
                        {% else %}
                            <i class="fas fa-times text-danger"></i>
                        {% endif %}
                    </td>
                    <td>
                        <a href="{{ path('app_film_show', {'id': film.id}) }}" class="btn btn-primary btn-sm">Afficher</a>
                        <a href="{{ path('app_film_edit', {'id': film.id}) }}" class="btn btn-warning btn-sm">Editer</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="7" class="text-center">No records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('app_film_new') }}" class="btn btn-success mt-3">Cr√©ation</a>
    </div>
{% endblock %}