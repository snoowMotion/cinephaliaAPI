<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <link rel="stylesheet" href="{{ asset('bootstrap-5.3.3-dist/css/bootstrap.css') }}">
        <link rel="stylesheet" href="{{ asset('css/login.css') }}">
        <link rel="stylesheet" href="{{ asset('css/style.css') }}">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
        {% block stylesheets %}{% endblock %}
        <script src="{{ asset('scripts/jquery-3.7.1.min.js') }}"></script>
        <script src="{{ asset('bootstrap-5.3.3-dist/js/bootstrap.js') }}"></script>
        {% block javascripts %}{% endblock %}
    </head>
    <body>
        <div class="row header">
            <div class="col-1 d-flex align-items-start">
                <img src="{{ asset('/images/logo.png') }}" alt="Logo du site" class="logo" />
            </div>
            <div class="col-11 d-flex align-items-center justify-content-end gx-5">
                {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                    <a class="nav-link" href="{{ path('app_logout') }}">Déconnexion</a>
                {% else %}
                {% endif %}
                    <a class="nav-link" href="{{ path('app_login') }}">Connexion</a>
            </div>
        </div>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container-fluid justify-content-center">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path("app_home") }}">Accueil</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Réservation</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Films</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Nous connaitre</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Contact</a>
                    </li>
                    <li class="nav-item">
                        <div class="accordion" id="employeeMenu">
                            <div class="accordion-item">
                                <h2 class="accordion-header" id="headingOne">
                                    <button class="accordion-button nav-link btn btn-link" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                                        Employé
                                    </button>
                                </h2>
                                <div id="collapseOne" class="accordion-collapse collapse" aria-labelledby="headingOne" data-bs-parent="#employeeMenu">
                                    <div class="accordion-body">
                                        <ul class="navbar-nav">
                                            <li class="nav-item">
                                                <a class="nav-link" href="{{ path('app_film_index') }}">Films</a>
                                            </li>
                                            <li class="nav-item">
                                                <a class="nav-link" href="{{ path('app_salle_crud_index') }}">Salles</a>
                                            </li>
                                            <li class="nav-item">
                                                <a class="nav-link" href="{{ path("app_seance_crud_index") }}">Séances</a>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </li>
                </ul>
            </div>
        </nav>
        {% block body %}{% endblock %}
        <footer class="footer bg-light text-dark py-4">
            <div class="container">
                <div class="row">
                    <div class="col-md-4">
                        <h5>Adresse</h5>
                        <p>123 Rue Exemple, 75000 Paris, France</p>
                    </div>
                    <div class="col-md-4">
                        <h5>Horaires</h5>
                        <p>Lundi - Vendredi: 9h00 - 18h00</p>
                        <p>Samedi: 10h00 - 14h00</p>
                    </div>
                    <div class="col-md-4">
                        <h5>Contact</h5>
                        <p>Téléphone: +33 1 23 45 67 89</p>
                        <div class="d-flex justify-content-start align-items-center">
                            <i class="bi bi-facebook social-icon"></i>
                            <i class="bi bi-twitter social-icon"></i>
                            <i class="bi bi-instagram social-icon"></i>
                        </div>
                    </div>
                </div>
            </div>
        </footer>
    </body>
</html>