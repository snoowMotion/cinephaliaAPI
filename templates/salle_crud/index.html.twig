{% extends 'base.html.twig' %}

{% block title %}Salle Index{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="mb-4">Gestion des salles</h1>

        <table class="table table-striped table-hover">
            <thead class="thead-dark">
                <tr>
                    <th>Cinéma</th>
                    <th>Numéro de Salle</th>
                    <th>Nombre de places</th>
                    <th>Nombre de places PMR</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for salle in salles %}
                <tr>
                    <td>{{ salle.cinema.ville }}</td>
                    <td>{{ salle.numSalle }}</td>
                    <td>{{ salle.nbPlace }}</td>
                    <td>{{ salle.nbPlacePmr }}</td>
                    <td>
                        <a href="{{ path('app_salle_crud_show', {'id': salle.id}) }}" class="btn btn-primary btn-sm">Afficher</a>
                        <a href="{{ path('app_salle_crud_edit', {'id': salle.id}) }}" class="btn btn-warning btn-sm">Editer</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5" class="text-center">No records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('app_salle_crud_new') }}" class="btn btn-success mt-3">Créer une nouvelle salle</a>
    </div>
{% endblock %}