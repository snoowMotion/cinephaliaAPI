{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/filmCard.css') }}" />
{% endblock %}

{% block body %}
    <div class="film-card-container">
        <div class="row">
            <div class="col-12">
                <h2 class="text-center">Nouveaut√©s</h2>
            </div>
        </div>
        <div class="row">
            {% for film in films %}
                <div class="col-2">
                    <div class="film-card">
                        <img src="{{ asset('/upload/affiche/' ~ film.afficheUrl) }}" alt={{ film.titre }} class="film-card-image" />
                        <div class="film-card-content">
                            <h3 class="film-card-title">{{ film.titre }}</h3>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>


    </div>)
{% endblock %}
